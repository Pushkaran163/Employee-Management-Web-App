@page
@model MyApp.Web.Pages.Departments.CreateModel
@{
    ViewData["Title"] = "Add Department";
}

<style>
    .form-wrapper {
        max-width: 700px;
        margin: 0 auto;
    }

    .fade-in {
        animation: fadeIn ease 0.6s;
    }
</style>




<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Add Department</h2>
        <a asp-page="Index" class="btn btn-success">All Departments</a>
    </div>


    <div class="form-wrapper card shadow-lg p-4 rounded-4">

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Department.Name"></label>
        <input asp-for="Department.Name" class="form-control" />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department.Description"></label>
        <textarea asp-for="Department.Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    @* <a asp-page="Index" class="btn btn-secondary">Cancel</a> *@
</form>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}